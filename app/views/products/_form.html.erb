<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, "Nom", style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :category_id, "Catégorie", style: "display: block" %>
    <%= form.select :category_id, options_for_select(Category.all.map{|c|[c.name, c.id]}) %>
  </div>

  <div>
    <%= form.label :price, "Prix", style: "display: block" %>
    <%= form.text_field :price %>
  </div>

  <div>
    <%= form.label :remaining_quantity, "Stock", style: "display: block" %>
    <%= form.number_field :remaining_quantity %>
  </div>

  <div>
    <%= form.submit "Créer ce produit", class:'btn btn-primary mt-2' %>
  </div>
<% end %>
