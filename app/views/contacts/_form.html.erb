<%= form_with(model: contact) do |form| %>
  <% if contact.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
        <% contact.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :tel, style: "display: block" %>
    <%= form.text_field :tel %>
  </div>

  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email %>
  </div>

  <div>
    <%= form.label :type_name, style: "display: block" %>
    <%= form.select :type_name, Contact.type_names.keys.to_a %>
  </div>

  <div>
    <%= form.label :etat, style: "display: block" %>
    <%= form.select :etat, Contact.etats.keys.to_a %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
