<%= form_with(model: contact) do |form| %>
  <% if contact.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
        <% contact.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :tel, style: "display: block" %>
    <%= form.text_field :tel %>
  </div>

  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email %>
  </div>

  <div>
    <%= form.label :type_name, style: "display: block" %>
    <% if contact.type_name == "prospect" %>
      <%= form.select :type_name, options_for_select(Contact.type_names.values.to_a, "Prospect") %>
    <% else %>
      <%= form.select :type_name, options_for_select(Contact.type_names.values.to_a, "Client") %>
    <% end %>
  </div>

  <div>
    <%= form.label :status, style: "display: block" %>
    <% if contact.status == "nothing" %>
      <%= form.select :status, options_for_select(Contact.statuses.values.to_a, "Rien") %>
    <% elsif contact.status == "to_contact" %>
      <%= form.select :status, options_for_select(Contact.statuses.values.to_a, "A contactÃ©") %>
    <% else %>
      <%= form.select :status, options_for_select(Contact.statuses.values.to_a, "Transaction(s) en cours") %>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
