<div id="<%= dom_id contact %>">
  <p>
    <strong>Name:</strong>
    <%= contact.name %>
  </p>

  <p>
    <strong>Tel:</strong>
    <%= contact.tel %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= contact.email %>
  </p>

  <p>
    <strong>Type:</strong>
    <% if contact.type_name == "prospect" %>
      <%= "Prospect" %>
    <% else %>
      <%= "Client" %>
    <% end %>
  </p>

  <p>
    <strong>Status:</strong>
    <% if contact.status == "nothing" %>
      <%= "Rien" %>
    <% elsif contact.status == "to_contact" %>
      <%= "A contactÃ©" %>
    <% else %>
      <%= "Transaction(s) en cours" %>
    <% end %>
  </p>

</div>
